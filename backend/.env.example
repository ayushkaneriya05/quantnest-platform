# .env.example
# Copy this file to .env and fill in your actual credentials.

# Django Settings
# Generate a new secret key for production. You can use an online generator.
SECRET_KEY='<your-strong-random-secret-key-here>'
# Set to False in production
DEBUG=True
# Add your domain names for production, e.g., .yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1
# Set to False if you are using PostgreSQL or another database
USE_SQLITE=False

# Supabase PostgreSQL Database
# Your full database connection string
DATABASE_URL='postgresql://<user>:<password>@<host>:<port>/<dbname>'
# Individual database components (often redundant if DATABASE_URL is set)
DB_NAME='<your-db-name>'
DB_HOST='<your-db-host>'
DB_PORT='<your-db-port>'
DB_USER='<your-db-user>'
DB_PASSWORD='<your-db-password>'

# MongoDB Atlas
# Your full MongoDB connection string
MONGO_DB_URL='mongodb+srv://<user>:<password>@<your-cluster-url>/?retryWrites=true&w=majority'

# Cloudinary
# You can find these in your Cloudinary dashboard
CLOUDINARY_URL='cloudinary://<api-key>:<api-secret>@<cloud-name>'
CLOUDINARY_CLOUD_NAME = "<your-cloud-name>"
CLOUDINARY_API_KEY = "<your-cloudinary-api-key>"
CLOUDINARY_API_SECRET = "<your-cloudinary-api-secret>"

# Frontend URL for CORS
# The URL of your frontend application
FRONTEND_URL='http://localhost:5173'

# Email Settings (Brevo SMTP Example)
EMAIL_BACKEND="django.core.mail.backends.smtp.EmailBackend"
EMAIL_HOST="smtp-relay.brevo.com"
EMAIL_PORT=587
EMAIL_HOST_USER="<your-brevo-smtp-user>"
EMAIL_HOST_PASSWORD="<your-brevo-smtp-password>"
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL="Your App Name <you@example.com>"

# Fyers API Credentials
# Get these from your Fyers developer dashboard
FYERS_WS_URL="wss://rtsocket-api.fyers.in/versova"
FYERS_SECRET='<your-fyers-app-secret>'
FYERS_CLIENT_ID="<your-fyers-client-id>"
# This must match the redirect URI configured in your Fyers app
FYERS_REDIRECT_URI="http://localhost:8000/api/v1/market/fyers/callback/"
